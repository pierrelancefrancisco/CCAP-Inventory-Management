@model CCAP_Inventory_Management.Models.Products

@{
    ViewData["Title"] = "Add";
}

<link rel="stylesheet" href="~/css/StyleSheet.css" />
<body>
    <div class="wrapper">
        <div class="sidebar">
            <h2>Inventory Management System</h2>
            <ul>
                <li><a href="#"><i class="fas fa-home"></i>Homepage</a></li>
                <li><a href="#"><i class="fas fa-user"></i>Product Company</a></li>
                <li><a asp-action="Index"><i class="fas fa-address-card"></i>Inventory Incoming</a></li>
                <li><a asp-controller="OutGoing" asp-action="Index"><i class="fas fa-project-diagram"></i>Inventory Outgoing</a></li>
                <li><a asp-controller="Archive" asp-action="Index"><i class="fas fa-project-diagram"></i>Archive</a></li>
                <li><a href="#"><i class="fas fa-blog"></i>Master Records</a></li>
                <li><a href="#"><i class="fas fa-address-book"></i>Suppliers</a></li>
                <li><a href="#"><i class="fas fa-map-pin"></i>Warehouses</a></li>
            </ul>
            <div class="icon_image">
                <img class="icon" src="~/CCAP-logo-white 4.svg">
            </div>
        </div>
        <div class="main_content">
            <div class="header"><h1>Inventory Incoming</h1></div>
            <div class="info">
                <div>
                    <form asp-action="Add">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <h4>Product Name</h4>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h4>Quantity</h4>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h4>Supplier Name</h4>
                            <input asp-for="SupplierName" class="form-control" />
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h4>Location</h4>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h4>Category</h4>
                            <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h4>Status</h4>
                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ProductStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="btn">
                            <button class="InventoryButtons" type="submit">Add to Inventory</button>
                        </div>
                    </form>
                </div>
                <div>
                    <a asp-action="Index">Back</a>
                </div>
            </div>
            </div>
        </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
